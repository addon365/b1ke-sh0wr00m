<Window x:Class="BikeShowRoom.WPF.ProductInsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikeShowRoom.WPF"
        mc:Ignorable="d"
        Title="ProductInsertWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="276,110,0,0" TextWrapping="Wrap" Text="ProductName" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="276,180,0,0" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top"/>
        <TextBox x:Name="productName" HorizontalAlignment="Left" Height="23" Margin="380,112,0,0" TextWrapping="Wrap" Text="{Binding Path=CurrentProduct.ProductName,Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="price" HorizontalAlignment="Left" Height="23" Margin="380,182,0,0" TextWrapping="Wrap" Text="{Binding Path=CurrentProduct.Price,Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="insertBtn" Content="Insert" Command="{Binding InsertCommand}" HorizontalAlignment="Left" Margin="380,224,0,0" VerticalAlignment="Top" Width="75" Click="insertBtn_Click"/>

    </Grid>
</Window>
