                </syncfusion:RibbonButton>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="19.951"/>
                    <ColumnDefinition Width="100.049"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>

                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Left" Grid.Column="0"  Text="Scheme Name" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <TextBox  Height="23" Text="{Binding Path=Scheme.SchemaName,Mode=TwoWay}" VerticalAlignment="Center"  Grid.Column="2" Margin="0,4"/>
                <TextBlock HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" Text="TotalMonths" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <TextBox  Height="23" Text="{Binding Path=Scheme.TotalMonths,Mode=TwoWay}" VerticalAlignment="Center"  Grid.Column="2" Grid.Row="1" Margin="0,4"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
